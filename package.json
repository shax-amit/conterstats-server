  "license": "MIT",

  "dependencies": {
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "mongoose": "^8.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "morgan": "^1.10.0"
  },

  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
